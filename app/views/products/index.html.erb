<p id="notice"><%= notice %></p>

<h1>Liste des produits</h1>

<%= paginate @products %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>ID</th>
      <th>Ean</th>
      <th>Description courte</th>
      <th>Description longue</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.photo %></td>
        <td><%= link_to product.title, product %></td>
        <td><%= product.client_id %></td>
        <td><%= product.ean %></td>
        <td>
          <% if product.short_description.nil? %>
            <a href="#" class="btn btn-primary btn-xs">Vide, en générer une</a>
          <% else %>
            Existe (<%= product.short_description.size %> caractères)
          <% end %>
        </td>
        <td>
          <% if product.long_description.nil? %>
            <a href="#" class="btn btn-success btn-xs">Vide, en générer une</a>
          <% else %>
            Existe (<%= product.long_description.size %> caractères)
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
