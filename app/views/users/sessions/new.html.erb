<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Identifiez-vous</h2>
  <div class="field">
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Votre adresse email', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Votre mot de passe', class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
        <%= f.check_box :remember_me, class: 'checkbox' %>
        <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

